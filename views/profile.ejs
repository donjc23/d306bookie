<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>D306 bookie</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		<p>You can only pick ONCE!! <br>
		   Must be picked by 7pm!!!
		</p>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
                <% if (name == 'donky') { %>
                	<form action="/score" method="post">

						<hr>
					    <button type="submit" class="btn btn-warning btn-lg">cal score</button>
					    
				    </form>	
				 
				 <% } %>
	</div>

	<div class="row">
		<div class="well">
        
			<% if (allPicks.length>0)  { %>
				<h4> all your picks from day 1 : </h4>
                    <table class="table table-bordered">
					  <tr>
					    <th>day#</th>
					    <th>picks...</th>
					  </tr>
					  <% for(var i=0; i<allPicks.length; i++) {%>
					  		<tr>
					  			<td><%= i+1 %></td>
						  		<% for(var j=0; j<allPicks[i].length; j++) {%>
						  			<td><%= allPicks[i][j] %></td>
						  		<% } %>
					  			
					  		</tr>
					  <% } %>
					 
					  </table>
			<% } %>
         
    	</div>
    </div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Time is <%= day %></h3>

                <% if (picks.length==0 && sevenOclock==false && nextDay==false) { %>
                	<form action="/profile" method="post">

	    				<h1>todays matches</h1>
	    				<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match1" value="Spurs-4.5" >Spurs Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match1" checked="checked" value="Wizards+4.5" >Wizards+4.5
				    	</label>
				    	<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match2" value="Knicks-6.5" >Knicks Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match2" checked="checked" value="Hornets-6.5" >Hornets-6.5
				    	</label>
				    	<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match3" value="Pistons+5" >Pistons Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match3" checked="checked" value="Thunder-5" >Thunder-5
				    	</label>
				    	<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match4" value="Grizzlies-2" >Grizzlies Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match4" checked="checked" value="Heat" >Heat+2
				    	</label>
						<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match5" value="Timberwolves+15.5" >Timberwolves Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match5" checked="checked" value="Warriors-15.5" >Warriors-15.5
				    	</label>
				    	
						<hr>
					    <button type="submit" class="btn btn-warning btn-lg">Pick'em</button>
					    
				    </form>
				 <% } else if(picks.length>0){ %>
				 
                	<h4> Today you picked: </h4>
                    <ul>
						<% for(var i=0; i<picks.length; i++) {%>
   							<li><%= picks[i] %></li>
						<% } %>
					</ul>
				<% } else if(nextDay==true){ %>
					<h4> New Day, update soon! </h4>
			    <% } else { %>
             		<h4> Sorry buddy, you missed boat today! </h4>
             <% } %>

            </div>
        </div>

	</div>

</div>
</body>
</html>

