<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>D306 bookie</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		<p>You can only pick ONCE!! <br>
		   Must be picked by 7pm!!!
		</p>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
                <% if (name == 'donky') { %>
                	<form action="/score" method="post">

						<hr>
					    <button type="submit" class="btn btn-warning btn-lg">cal score</button>
					    
				    </form>	
				 
				 <% } %>
	</div>

	<div class="row">
		<div class="well">
        
			<% if (allPicks.length>0)  { %>
				<h4> all your picks from day 1 : </h4>
                    <table class="table table-bordered">
					  <tr>
					    <th>day#</th>
					    <th>picks...</th>
					  </tr>
					  <% for(var i=0; i<allPicks.length; i++) {%>
					  		<tr>
					  			<td><%= i+1 %></td>
						  		<% for(var j=0; j<allPicks[i].dayPicks.length; j++) {%>
						  			<td><%= allPicks[i].dayPicks[j] %></td>
						  		<% } %>
					  			
					  		</tr>
					  <% } %>
					 
					  </table>
			<% } %>
         
    	</div>
    </div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Time is <%= day %></h3>

                <% if (picks.length==0 && sevenOclock==false) { %>
                	<form action="/profile" method="post">

	    				<h1>todays matches</h1>

						<label class="radio-inline">
				      	<input type="radio" name="match1" value="Cavaliers-3" >Cavaliers Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match1" value="Raptors+3" checked="checked" >Raptors+3
				    	</label>
						<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match2" value="Pacers-6.5" >Pacers Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match2" value="Nets+6.5" checked="checked" >Nets+6.5
				    	</label>
						<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match3" value="Magic+3.5" >Magic Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match3" value="Pistons-3.5" checked="checked" >Pistons-3.5
				    	</label>
				    	<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match4" value="Suns+9.5" >Suns Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match4" value="Thunder-9.5" checked="checked" >Thunder-9.5
				    	</label>
						<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match5" value="Hornets+2" >Hornets Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match5" value="Heat-2" checked="checked" >Heat-2
				    	</label>
						<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match6" value="Rockets+1.5" >Rockets Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match6" value="Mavericks-1.5" checked="checked" >Mavericks-1.5
				    	</label>
				    	<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match7" value="Lakers+8.5" >Lakers Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match7" value="Jazz-8.5" checked="checked" >Jazz-8.5
				    	</label>
				    	<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match8" value="Warriors-11" >Warriors Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match8" value="Pelicans+11" checked="checked" >Pelicans+11
				    	</label>
				    	
						
						<hr>
					    <button type="submit" class="btn btn-warning btn-lg">Pick'em</button>
					    
				    </form>
				 <% } else if(picks.length>0){ %>
				 
                	<h4> Today you picked: </h4>
                    <ul>
						<% for(var i=0; i<picks.length; i++) {%>
   							<li><%= picks[i] %></li>
						<% } %>
					</ul>
				<% } else { %>
             		<h4> Sorry buddy, you missed boat today! </h4>
             <% } %>

            </div>
        </div>

	</div>

</div>
</body>
</html>
