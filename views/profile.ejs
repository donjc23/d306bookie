<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>D306 bookie</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		<p>You can only pick ONCE!! <br>
		   Must be picked by 7pm!!!
		</p>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
                <% if (name == 'donky') { %>
                	<form action="/score" method="post">

						<hr>
					    <button type="submit" class="btn btn-warning btn-lg">cal score</button>
					    
				    </form>	
				 
				 <% } %>
	</div>

	<div class="row">
		<div class="well">
        
			<% if (allPicks.length>0)  { %>
				<h4> all your picks from day 1 : </h4>
                    <table class="table table-bordered">
					  <tr>
					    <th>day#</th>
					    <th>picks...</th>
					  </tr>
					  <% for(var i=0; i<allPicks.length; i++) {%>
					  		<tr>
					  			<td><%= i+1 %></td>
						  		<% for(var j=0; j<allPicks[i].length; j++) {%>
						  			<td><%= allPicks[i][j] %></td>
						  		<% } %>
					  			
					  		</tr>
					  <% } %>
					 
					  </table>
			<% } %>
         
    	</div>
    </div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Time is <%= day %></h3>

                <% if (picks.length==0 && sevenOclock==false && nextDay==false) { %>
                	<form action="/profile" method="post">

	    				<h1>todays matches</h1>
	    				<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match1" value="Grizzlies-4.5" >Grizzlies Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match1" checked="checked" value="76ers+4.5" >76ers+4.5
				    	</label>
				    	<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match2" value="Spurs-4" >Spurs Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match2" checked="checked" value="Hornets+4" >Hornets+4
				    	</label>
				    	<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match3" value="Suns+4" >Suns Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match3" checked="checked" value="Magic-4.5" >Magic-4.5
				    	</label>
				    	<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match4" value="Trail Blazers+11.5" >Trail Blazers Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match4" checked="checked" value="Cavaliers-11.5" >Cavaliers-11.5
				    	</label>
						<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match5" value="Hawks-3" >Hawks Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match5" checked="checked" value="Pacers+3" >Pacers+3
				    	</label>
				    	<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match6" value="Celtics-7.5" >Celtics Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match6" checked="checked" value="Nets+7.5" >Nets+7.5
				    	</label>
				    	<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match7" value="Heat+4.5" >Heat Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match7" checked="checked" value="Pistons-4.5" >Pistons-4.5
				    	</label>
				    	<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match8" value="Raptors+3.5" >Raptors Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match8" checked="checked" value="Rockets-3.5" >Rockets-3.5
				    	</label>
				    	<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match9" value="Clippers-9" >Clippers Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match9" checked="checked" value="Mavericks+9" >Mavericks+9
				    	</label>
				    	<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match10" value="Nuggets+4" >Nuggets Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match10" checked="checked" value="Jazz-4" >Jazz-4
				    	</label>
				    	<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match11" value="Timberwolves+1" >Timberwolves Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match11" checked="checked" value="Pelicans-1" >Pelicans-1
				    	</label>
				    	<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match12" value="Lakers+11" >Lakers Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match12" checked="checked" value="Warriors-11" >Warriors-11
				    	</label>
				    	<hr>
						<label class="radio-inline">
				      	<input type="radio" name="match13" value="Thunder+2.5" >Thunder Vs
				    	</label>
				    	<label class="radio-inline">
				      	<input type="radio" name="match13" checked="checked" value="Kings-2.5" >Kings-2.5
				    	</label>
				    	
						<hr>
					    <button type="submit" class="btn btn-warning btn-lg">Pick'em</button>
					    
				    </form>
				 <% } else if(picks.length>0){ %>
				 
                	<h4> Today you picked: </h4>
                    <ul>
						<% for(var i=0; i<picks.length; i++) {%>
   							<li><%= picks[i] %></li>
						<% } %>
					</ul>
				<% } else if(nextDay==true){ %>
					<h4> New Day, update soon! </h4>
			    <% } else { %>
             		<h4> Sorry buddy, you missed boat today! </h4>
             <% } %>

            </div>
        </div>

	</div>

</div>
</body>
</html>

